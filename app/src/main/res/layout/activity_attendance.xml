<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Attendance">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="414dp"
        android:layout_height="112dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rounded_rectangle" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="212dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Attendance"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:typeface="normal" />

        <Button
            android:id="@+id/backattendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F51B4"
            android:text="Back" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="610dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Students - 24"
            android:textAlignment="textEnd"
            android:textSize="17sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rotationY="0">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F44336"
                        android:drawableStart="@drawable/baseline_boy_24"
                        android:text="Zied Hergafi"
                        android:textColorHighlight="#C81C1C"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#F44336"
                        android:text="Ahmed masmoudi"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="Yessine bellaj"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="yasmine masmoudi"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="najwa feki"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="manoubiya kacem"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="kawthar najjar"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="mahmoud louati"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="ilhem souri"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#F44336"
                        android:text="najiba zouari"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="abdelkader ben salah"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="kawthar bardi"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button17"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#F44336"
                        android:text="ibrahim louati"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button18"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="najib zouari"
                        app:icon="@drawable/rounded_button" />

                    <Button
                        android:id="@+id/button19"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#4CAF50"
                        android:text="hammadi abid"
                        app:icon="@drawable/rounded_button" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>