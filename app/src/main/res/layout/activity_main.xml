<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="414dp"
        android:layout_height="112dp"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rounded_rectangle" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="212dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Activity"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:typeface="normal" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.01999998">

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/attendance"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <Button
                android:id="@+id/exams"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:text="Exams"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/classroom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Classroom"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <Button
                android:id="@+id/timetable"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Table"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/assignment"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment"
                android:textAlignment="viewStart" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <Button
                android:id="@+id/logout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="130dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Classes"
            android:textSize="34sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="223dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="00dp"
                android:orientation="vertical"
                android:translationX="100dp">

                <TextView
                    android:id="@+id/amal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amel Rekik     S1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/math"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:text="31/04/2024           14:00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:translationX="100dp">

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mourad Ellouze     Lab 12"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subject2"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:text="Mobile Development"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:text="31/04/2024           14:00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:translationX="100dp">

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Youssef Neji     S2"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subject3"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:text="Graphe et optimisation"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/time3"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:text="31/04/2024           14:00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:translationX="100dp">

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mohamed Louati     B3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subject4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Physics"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/time4"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:text="28/04/2024           10:00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:translationX="100dp">

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mayssa Njeh     S7"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subject5"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Big Data"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/time5"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:text="02/04/2024          14:00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:translationX="100dp">

                <TextView
                    android:id="@+id/name6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amina Bakkar     Lab1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subject6"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:text="fouille de donnée"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/time6"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:text="14/04/2024           14:00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
